<div class="page">
  <div class="container text-center">
  <h1>New Game</h1>

  <div class="list">
      <ul class="list-inline" id="letter-list">
        <% @letters.each do |letter| %>
        <li><%= letter %></li>
    <% end %>
      </ul>
  </div>

    <div class="form-container">
      <form action="/score" method="post" id ="form">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters , @letters %>
        <input type="text" name="word" class="form-control" placeholder="What's the longest word you can find ?">
        <input type="submit" class="form-control btn btn-primary">
    </div>
  </form>
</div>
